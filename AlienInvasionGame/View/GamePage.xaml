<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlienInvasionGame.GamePage"
             BackgroundColor="{DynamicResource backgroundColor}">
    
    
    <ContentPage.Content >
        <StackLayout >
            <Label Text="Avoid the Aliens Hiding Behind a Door!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
            <Button 
            Text="Door 1"  
                x:Name="Door1Button"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" 
                Clicked="ButtonClicked"   
            
            />
            <Button 
            Text="Door 2"
                x:Name="Door2Button"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" 
              Clicked="ButtonClicked"
                
            />
            <Button 
           Text="Door 3"
                x:Name="Door3Button"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
              Clicked="ButtonClicked" 
                
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>